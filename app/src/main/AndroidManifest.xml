<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.markusbilz.yown">

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.markusbilz.yown.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.markusbilz.yown.AddDetailsActivity" />
        <activity
            android:name="com.markusbilz.yown.AddActivity"
            android:parentActivityName="com.markusbilz.yown.MainActivity" />
        <activity
            android:name="com.markusbilz.yown.EditActivity"
            android:parentActivityName="com.markusbilz.yown.EditActivity" />
        <activity
            android:name="com.markusbilz.yown.SettingsActivity"
            android:parentActivityName="com.markusbilz.yown.MainActivity" />
    </application>
</manifest>