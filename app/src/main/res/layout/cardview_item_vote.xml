<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_item_vote_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/msg_item_picture"
            android:scaleType="fitXY"
            android:src="@drawable/sample" />

        <TextView
            android:id="@+id/tv_item_vote_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/iv_item_vote_photo"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/tv_item_vote_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_vote_title"
            android:layout_toEndOf="@+id/iv_item_vote_photo" />

        <ImageView
            android:id="@+id/iv_item_vote_used"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/msg_item_used"
            android:minHeight="30dp"
            android:minWidth="30dp"
            android:src="@drawable/ic_check_black_24dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>